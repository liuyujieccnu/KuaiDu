<!-- 顶部标题栏目 -->
<view class='top-bar'>
  <view class="bar-item bar-current">
    <view>国内</view>
    <view class='current-border'></view>
  </view>
  <view class="bar-item">国际</view>
  <view class="bar-item">财经</view>
  <view class="bar-item">娱乐</view>
  <view class="bar-item">军事</view>
  <view class="bar-item">体育</view>
  <view class="bar-item">其他</view>
</view>

<!-- 内容页面 content内容可以整体切换 -->
<view class='content-wrapper'>

  <!-- 热点头图页面 -->
  <view class='hot-wrapper'>
    <image class='hot-bg' src="{{hotImgAdress}}"></image>
    <view class='hot-mask'></view>
    <view class='hot-detail'>
      <image class='hot-img' src="{{hotImgAdress}}"></image>
      <view class='title-mask'></view>
      <view class='hot-tips'>热门</view>
      <view class='hot-title'>{{hotTitle}}</view>
      <view class='hot-publish-detail'>
        <view class='hot-source'>{{hotSource}}</view>
        <view class='hot-time'>{{hotTime}}</view>
      </view>
    </view>
  </view>

  <!-- 新闻列表页面 -->
  <scroll-view scroll-y class='news-scroll'>

    <view class='news-table' wx:for="{{newsItem}}">
      <!-- 新闻单项 -->
      <view class='news-item'>
        <view class='item-text'>
          <view class='item-title'>{{item.title}}</view>
          <view class='item-publish-detail'>
            <view class='item-source'>{{item.source}}</view>
            <view class='item-time'>{{item.date}}</view>
          </view>
        </view>
        <image class='item-img' src="{{item.firstImage}}"></image>
      </view>

    </view>
  </scroll-view>

  </view>