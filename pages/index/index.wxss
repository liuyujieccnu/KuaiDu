.top-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0rpx 15rpx 0rpx;
  background-color: #2b88d7;
  position: fixed;
  width: 750rpx;
  z-index: 5;
}

.hide{
  display: none;
}

.bar-item {
  font-size: 35rpx;
  color: white;
  opacity: 0.7;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/*选中状态的文字效果*/

.bar-current {
  opacity: 1;
}

/*选中状态的文字下边栏*/

.current-border {
  padding-top: 10rpx;
  border-bottom: 5rpx solid white;
  width: 35rpx;
  opacity: 0.7;
}



.hot-wrapper {
  width: 100%;
  height: 405rpx;
  position: relative;
}

.hot-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -4;
}

.hot-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: white;
  opacity: 0.85;
  z-index: -3;
}

.hot-tips{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 30rpx;
  line-height: 42rpx;
  padding: 5rpx 10rpx 5rpx 15rpx;
  border-top-right-radius: 6rpx;
  border-bottom-left-radius: 30rpx;
  color: white;
  background-color: rgba(225,69,0,0.7);
}

.hot-detail {
  width: 690rpx;
  height: 345rpx;
  position: relative;
  top: 30rpx;
  left: 30rpx;
}

.hot-img {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -2;
}

/*黑色渐变遮罩，白色文字更清晰*/

.title-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
  background: linear-gradient(0deg, black, transparent, transparent);
  opacity: 0.7;
  border-radius: 6rpx;
}

.hot-title {
  color: white;
  padding-left: 30rpx;
  padding-top: 200rpx;
  font-size: 35rpx;
  line-height: 49rpx;
  width: 630rpx;
  /*设置超出两行之后显示...*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.hot-publish-detail {
  display: flex;
  color: white;
  opacity: 0.8;
  padding-left: 30rpx;
  padding-top: 5rpx;
  font-size: 25rpx;
  line-height: 35rpx;
}

.hot-time {
  margin-left: 30rpx;
}

.content-wrapper{
  padding-top: 96rpx;
  height: 100%;
}

.news-item {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
  padding: 18rpx 0;
  margin: 0 30rpx;
}

.item-title {
  font-size: 35rpx;
  line-height: 49rpx;
  height: 100rpx;
  /*设置超出两行之后显示...*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-publish-detail {
  padding-top: 10rpx;
  display: flex;
  font-size: 25rpx;
  line-height: 35rpx;
  opacity: 0.7;
}

.item-time {
  padding-left: 30rpx;
}

.item-text {
  float: left;
  width: 460rpx;
  padding-right: 50rpx;
}

.item-img {
  height: 133rpx;
  width: 180rpx;
  border-radius: 6rpx;
}
